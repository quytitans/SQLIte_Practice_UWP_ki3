<Page
    x:Class="ControlMoneyApp.View.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ControlMoneyApp.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <NavigationView x:ConnectionId='2' x:Name="nvMain" PaneDisplayMode="Left"                            
                            IsSettingsVisible="False">        
        <NavigationView.MenuItems >
            <NavigationViewItem x:ConnectionId='3' Icon="Add" Content="Add New Expenses" Tag="addNew"                     />
            <NavigationViewItem x:ConnectionId='4' Icon="Library" Content="Show Expenses" Tag="showInfomation"                      />
            <NavigationViewItem Icon="Refresh" Content="Menu Item3" Tag="SamplePage3" />
            <NavigationViewItem Icon="Download" Content="Menu Item4" Tag="SamplePage4" />
        </NavigationView.MenuItems>
        <Frame x:ConnectionId='5' x:Name="contentFrame"/>
    </NavigationView>
</Page>

